              <ui-view ui:for="{{ items3 }}" :class="{'grey-bg': index % 2 == 0}">
                  <ui-row space="20">
                    <ui-col align="left" space-left="10">
                      <ui-text>订单编号： {{item.order_sn}}</ui-text>
                    </ui-col>
                    <ui-col align="right" space-right="10">
                      <ui-text>桌号： {{item.desk.name}}</ui-text>
                    </ui-col>
                  </ui-row>
