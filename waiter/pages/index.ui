<script>
import { Api, baseUrl, wsUrl } from '#/api.js'
import { Card } from 'vant';
import Vue from 'vue';
import 'vant/lib/card/style';
import socket from '#/static/utils/socket'
Vue.use(Card)
export default {
  config: {
    navigationBarTitleText: '首页',
    backgroundColor: '#F4F4F4',
    navigationBarTextStyle: 'black'
  },
  name: 'indexComponent',
  data() {
    return {
      moreImg:false,
      height:ui.DEFAULT_CONTENT_HEIGHT,
      apiUrl: baseUrl,
      items1: [],
      items2: [],
      items3: [],
      top: 0,
      index: 0,
      bottom: 30,
      proportion: 0,
      // 下拉刷新（初始状态）
      state: 1,
      showLoading: false,
      imgSrc: require('#/static/img/frush.gif'),
      currentPage:{
        items1:1,
        items2:1,
        items3:1
      },
      currentStatus:1,//订单状态 1：已下单
      currentPartitions:[]
    }
  },
  methods: {
    makeOrder(item){
      let that=this
      this.fetch(Api.order+'/'+item.id, {
        method:'PUT',
        data: { 
          status:2,
        },
        header: {
          'content-type': 'application/x-www-form-urlencoded'
        }
      }).then((response) => {
        if(response.code=='500'){
          ui.showToast({ title: '订单已过期！', icon: 'success', duration: 3000 })
          that.frushData(that.currentStatus)
        }
        if(response=='success'){
          ui.showToast({ title: '已通知用户！', icon: 'success', duration: 3000 })
          that.frushData(that.currentStatus)
        }
      }).catch((error) => {
        console.log(error)
      })
    },
    getNotice(status){
      let noticeText=''
      if(status==3){
        noticeText='待取餐'
      }
      if(status==5){
        noticeText='取餐完毕'
      }
      return noticeText;
    },
    noticeOrder(item){
      let itemList=[]
      let partitionIdList=[]
      let partition_id=null
      let that=this;
      item.partitions.map((it) => {
        if(it.status==3 || it.status==2){
          itemList.push(it.name)
          partitionIdList.push(it.id)
        }
      })
      ui.showActionSheet({
        itemList: itemList,
        showCancel: false,
        success: (index) => {
          partition_id = partitionIdList[index]
          that.fetch(Api.order+'/'+item.id, {
            method:'PUT',
            data: { 
              status:3,
              partition_id:partition_id
            },
            header: {
              'content-type': 'application/x-www-form-urlencoded'
            }
          }).then((response) => {
            if(response=='success'){
              ui.showToast({ title: '已通知用户取餐！', icon: 'success', duration: 3000 })
              that.frushData(that.index + 1)
            }
          }).catch((error) => {
            console.log(error)
          })
        }
      })
    },
    getDesc(sku){
      if(!sku){
        return ''
      }
      let descArr=JSON.parse(sku.specValue)
      let atrributionArr=JSON.parse(sku.specName)
      let desc=''
      descArr.map((item,index)=>{
        desc += atrributionArr[index] + ':' + item + ' '
      })
      return desc
    },
    showMore(partitions){
      this.moreImg=true
      this.currentPartitions=partitions
    },
    handleShow (key) {
      this[key] = false
    },
    handleChange (index) {
      this.index = index
      let status=index+1
      this.frushData(status)
    },
    handleBegin ({ distance, direction }) {
      this.proportion = distance / 94
      // 拉满94px
      if (this.proportion >= 1) {
        if (this.state === 1 && direction === 'down') {
          // 释放刷新
          this.state = 2
        }
      } else {
        this.state = 1
      }
    },
    getOrdersData(status){
      let limit=50
      let that = this
      let page = this.currentPage['items'+status]
      let mod = 0
      this.fetch(Api.order, {
        method:'GET',
        data: { page, limit, status }
      }).then((response) => {
        that.state = 3
        that['items'+status] = response.list
        ++that.currentPage['items'+status]
      }).catch((error) => {
        console.log(error)
      })
    },
    frushData(status){
      let limit=50
      let that = this
      let page = this.currentPage['items'+status]
      let mod = 0
      this.fetch(Api.order, {
        method:'GET',
        data: { page, limit, status }
      }).then((response) => {
        that['items'+status] = response.list
      }).catch((error) => {
        console.log(error)
      })
    },
    handleActive () {
      this.getOrdersData(this.currentStatus)
    },
    handleAfter (flag) {
      this.proportion = 0
      if (flag) {
        // 刷新成功...
        this.state = 4
        this.top -= 10
      }
    },
    handleLoadMore () {
      window.setTimeout(() => {
        this.bottom += 10
        this.getOrdersData(this.currentStatus)
      }, 1500)
    },
    getSpecValue(specValue){
      let spec = JSON.parse(specValue);
      let str = spec.join(' ')
      return str;
    }
  },
  created() {
    this.getOrdersData(1)
    this.getOrdersData(2)
    this.getOrdersData(3)
  },
  mounted() {
     //首屏页面需要在mounted中延时才能调用框架api，其他页面不需要延时
    setTimeout(() => {
      //关闭app启动图
      ui.closeSplashscreen()
    }, 1000);
  },
  computed:{
    
  },
  mixins: [ socket ]
}
</script>

