          :key = "index"
          :tag="getNotice(item.status)"
          :title="item.name"
          :thumb="apiUrl + item.image"
          :num="item.nums"
          :price="item.price/100"
          :desc="getDesc(item.sku)"
        >
        <div slot="desc">
          <ui-text block v-if="item.sku">{{ getSpecValue(item.sku.specValue) }}</ui-text>
          <ui-text block>{{ item.message }}</ui-text>
